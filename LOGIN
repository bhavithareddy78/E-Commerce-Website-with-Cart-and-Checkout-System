<?php
session_start();
error_reporting(E_ALL);
ini_set('display_errors', 1);

$conn = new mysqli("localhost", "root", "", "shopease_db");
if ($conn->connect_error) {
    die("Connection failed: " . $conn->connect_error);
}

$success = "";
$error = "";

if (isset($_GET['action']) && $_GET['action'] === 'logout') {
    session_destroy();
    header("Location: login.php");
    exit();
}

if ($_SERVER["REQUEST_METHOD"] == "POST" && isset($_POST["register"])) {
    $email    = trim($_POST['email']);
    $uname    = trim($_POST['uname']);
    $password = $_POST['password'];
    $cpass    = $_POST['cpass'];

    if (!filter_var($email, FILTER_VALIDATE_EMAIL)) {
        $error = "Invalid email format.";
    } elseif (!preg_match("/^[A-Za-z0-9@._-]+$/", $uname)) {
        $error = "Username can only contain letters, numbers, and @ . _ -";
    } elseif ($password !== $cpass) {
        $error = "Passwords do not match.";
    } else {
        $stmt = $conn->prepare("SELECT * FROM users WHERE username = ? OR email = ?");
        $stmt->bind_param("ss", $uname, $email);
        $stmt->execute();
        $result = $stmt->get_result();

        if ($result->num_rows > 0) {
            $error = "Username or email already exists.";
        } else {
            $role = "customer";
            $created_at = date("Y-m-d H:i:s");
            $hashed_password = password_hash($password, PASSWORD_DEFAULT);

            $insert = $conn->prepare("INSERT INTO users (username, password, email, role, created_at) VALUES (?, ?, ?, ?, ?)");
            $insert->bind_param("sssss", $uname, $hashed_password, $email, $role, $created_at);

            if ($insert->execute()) {
                $success = "Registration successful! Please login.";
            } else {
                $error = "Registration failed. Try again.";
            }

            $insert->close();
        }

        $stmt->close();
    }
}

if ($_SERVER["REQUEST_METHOD"] == "POST" && isset($_POST["login"])) {
    $uname = trim($_POST['uname']);
    $password = $_POST['password'];

    $stmt = $conn->prepare("SELECT * FROM users WHERE username = ?");
    $stmt->bind_param("s", $uname);
    $stmt->execute();
    $result = $stmt->get_result();

    if ($result->num_rows === 1) {
        $row = $result->fetch_assoc();
        if (password_verify($password, $row['password'])) {
            $_SESSION['user_id'] = $row['user_id'];
            $_SESSION['username'] = $row['username'];
            $_SESSION['role'] = $row['role'];
            header("Location: login.php");
            exit();
        } else {
            $error = "Invalid password.";
        }
    } else {
        $error = "Username not found.";
    }

    $stmt->close();
}

$conn->close();
?>

<!DOCTYPE html>
<html>
<head>
    <title>User System</title>
    <style>
        body {
            background: linear-gradient(to right, #ffecd2, #fcb69f);
            font-family: Arial;
            padding: 30px;
        }
        form {
            background: white;
            padding: 20px;
            width: 320px;
            margin: auto;
            border-radius: 10px;
            box-shadow: 0 0 10px gray;
            text-align: center;
        }
        input[type="text"], input[type="password"], input[type="email"] {
            width: 100%;
            padding: 8px;
            margin: 8px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        input[type="submit"] {
            width: 100%;
            padding: 10px;
            background-color: #28a745;
            color: white;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        input[type="submit"]:hover {
            background-color: #218838;
        }
        .message {
            margin-top: 10px;
            font-weight: bold;
        }
        .success { color: green; }
        .error { color: red; }
        .link {
            margin-top: 15px;
        }
        .link a {
            color: #007bff;
            font-weight: bold;
            text-decoration: none;
        }
    </style>
</head>
<body>

<?php if (isset($_SESSION['username'])): ?>
    <form>
        <h2>Welcome, <?= $_SESSION['username']; ?>!</h2>
        <p>Role: <?= $_SESSION['role']; ?></p>
        <div class="link">
            <a href="login.php?action=logout">Logout</a><br><br>
            <a href="index.php">üè† Back to Home</a>
        </div>
    </form>
<?php elseif (isset($_GET['register'])): ?>
    <form method="post" action="">
        <h2>Register</h2>
        <input type="email" name="email" placeholder="Email" required>
        <input type="text" name="uname" placeholder="Username" required pattern="[A-Za-z0-9@._-]+" title="Letters, numbers and @ . _ - only">
        <input type="password" name="password" placeholder="Password" required>
        <input type="password" name="cpass" placeholder="Confirm Password" required>
        <input type="submit" name="register" value="Register">

        <?php if ($success): ?>
            <div class="message success"><?= $success ?></div>
        <?php elseif ($error): ?>
            <div class="message error"><?= $error ?></div>
        <?php endif; ?>

        <div class="link">
            <a href="login.php">Already registered? Login</a>
        </div>
    </form>
<?php else: ?>
    <form method="post" action="">
        <h2>Login</h2>
        <input type="text" name="uname" placeholder="Username" required>
        <input type="password" name="password" placeholder="Password" required>
        <input type="submit" name="login" value="Login">

        <?php if ($error): ?>
            <div class="message error"><?= $error ?></div>
        <?php endif; ?>

        <div class="link">
            <a href="login.php?register=1">New user? Register</a>
        </div>
    </form>
<?php endif; ?>

</body>
</html>
