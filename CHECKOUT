        }
        label {
            display: block;
            margin: 15px 0 5px;
            font-weight: bold;
        }
        input, select, textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 6px;
        }
        button {
            margin-top: 20px;
            padding: 12px;
            background-color: #2e7d32;
            color: white;
            border: none;
            font-size: 16px;
            border-radius: 6px;
            cursor: pointer;
        }
        button:hover {
            background-color: #1b5e20;
        }
        .message {
            text-align: center;
            font-size: 18px;
            color: green;
            margin-top: 20px;
        }
        .back-btn {
            display: inline-block;
            margin-top: 10px;
            text-align: center;
            padding: 10px 20px;
            background-color: #999;
            color: white;
            text-decoration: none;
            border-radius: 6px;
        }
        .back-btn:hover {
            background-color: #666;
        }
        .order-summary {
            max-width: 600px;
            margin: 30px auto;
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        }
        .order-summary h2 {
            margin-bottom: 15px;
